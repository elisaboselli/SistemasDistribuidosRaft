<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userinterface.ClientController">
    <VBox alignment="CENTER" prefHeight="195.0" prefWidth="301.0" spacing="20.0">

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <GridPane alignment="center" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Port" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="fieldPort" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label text="Address" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <TextField fx:id="fieldAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        </GridPane>

        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <Button fx:id="connectButton" onAction="#onConnectButtonClick" text="Connect" />
            <Button fx:id="disconnectButton" onAction="#onDisconnectButtonClick" text="Disconnect" disable="true"/>
        </HBox>

        <GridPane alignment="center" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>


            <Label text="Id" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="fieldId" disable="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label text="Value" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <TextField fx:id="fieldValue" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        </GridPane>

        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <Button fx:id="getButton" disable="true" onAction="#onGetButtonClick" text="Get" />
            <Button fx:id="setButton" disable="true" onAction="#onSetButtonClick" text="Set" />
        </HBox>

        <Label text="Result" />
        <Label fx:id="resultText" />
        <Button fx:id="exitButton" cancelButton="true" onAction="#onExitButtonClick" text="Exit" />

    </VBox>
</FlowPane>
